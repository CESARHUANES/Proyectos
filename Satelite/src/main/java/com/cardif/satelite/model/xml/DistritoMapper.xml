<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cardif.satelite.configuracion.dao.DistritoMapper">
	
	<resultMap id="BaseResultMap" type="com.cardif.satelite.model.Distrito">
		<id column="COD_DISTRITO" property="codDistrito" jdbcType="VARCHAR" />
		<result column="NOMBRE_DISTRITO" property="nombreDistrito" jdbcType="VARCHAR" />
		<result column="PROVINCIA" property="provincia" jdbcType="VARCHAR" />
	</resultMap>
	
	<sql id="Base_Column_List">
		COD_DISTRITO, NOMBRE_DISTRITO, PROVINCIA
	</sql>
	
	<select id="selectAllDistrito" resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List" />
		from DISTRITO
	</select>
	
	<select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.String">
		select
		<include refid="Base_Column_List" />
		from DISTRITO
		where COD_DISTRITO = #{codDistrito,jdbcType=VARCHAR}
	</select>
	
	<select id="selectByCodProvincia" resultMap="BaseResultMap" parameterType="java.lang.String">
		select
		<include refid="Base_Column_List" />
		from DISTRITO
		where PROVINCIA = #{provincia,jdbcType=VARCHAR}
	</select>
</mapper>